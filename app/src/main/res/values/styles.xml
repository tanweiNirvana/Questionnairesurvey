<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_color_text</item>
        <item name="android:textSize">@dimen/tv_size_text</item>
    </style>

    <style name="cb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ViewGroup_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/rg_margin</item>
        <item name="android:layout_marginRight">@dimen/rg_margin</item>
    </style>

    <style name="tv_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/tv_color_title</item>
        <item name="android:textSize">@dimen/tv_size_title</item>
    </style>

    <style name="et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/rg_margin</item>
        <item name="android:layout_marginRight">@dimen/rg_margin</item>
    </style>

    <style name="bt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/bt_margin</item>
        <item name="android:layout_marginRight">@dimen/bt_margin</item>
        <item name="android:layout_marginTop">@dimen/bt_margin</item>
        <item name="android:textSize">@dimen/tv_size_text</item>
    </style>

</resources>
